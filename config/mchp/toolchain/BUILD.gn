declare_args() {
  mchp_ar = "xc32-ar"
  mchp_cc = "xc32-gcc"
  mchp_cxx = "xc32-g++"
  mchp_cpu = "P32MZ1025W104132"
}

toolchain("wfi32") {
  tool("cc") {
    depfile = "{{output}}.d"
    #command = "$mchp_cc -MMD -MF $depfile {{defines}} {{include_dirs}} {{cflags}} {{cflags_c}} -c {{source}} -o {{output}}"
    #command = "$mchp_cc -g -x c -c -mprocessor=32MZ1025W104132  -ffunction-sections -mmicromips -Os {{defines}} {{include_dirs}} -Wall -MP -MMD -MF $depfile -o {{output}} {{source}} -DXPRJ_default=default -no-legacy-libc -Wno-sign-compare -Wno-conversion -Wno-maybe-uninitialized -Wno-uninitialized -Wno-error=format= -Wno-deprecated-declarations -Wno-missing-field-initializers -Wno-unused-parameter -Wno-psabi -Wno-cast-function-type -minterlink-compressed -mdfp=\"/opt/microchip/mplabx/v6.00/packs/Microchip/PIC32MZ-W_DFP/1.5.203\""
